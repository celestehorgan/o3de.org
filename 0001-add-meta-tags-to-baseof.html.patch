From c90a868e59bb6be87cbe41474f9e41a5f0544fe8 Mon Sep 17 00:00:00 2001
From: Celeste Horgan <celeste@cncf.io>
Date: Tue, 6 Jul 2021 10:38:38 -0700
Subject: [PATCH] add meta tags to baseof.html

Signed-off-by: Celeste Horgan <celeste@cncf.io>
---
 layouts/_default/baseof.html    |  3 +--
 layouts/partials/meta-tags.html | 18 ++++++++++++++++++
 2 files changed, 19 insertions(+), 2 deletions(-)
 create mode 100644 layouts/partials/meta-tags.html

diff --git a/layouts/_default/baseof.html b/layouts/_default/baseof.html
index 9ae30ba67..201b55c0f 100644
--- a/layouts/_default/baseof.html
+++ b/layouts/_default/baseof.html
@@ -9,8 +9,7 @@
     </title>
     {{ partial "css.html" . }}
     {{ partial "favicon.html" . }}
-    <meta name="viewport" content="width=device-width, initial-scale=1">
-    
+    {{ partial "meta-tags.html" . }}
   </head>
   {{ partial "javascript.html" }}
     <body>
diff --git a/layouts/partials/meta-tags.html b/layouts/partials/meta-tags.html
new file mode 100644
index 000000000..7d089d0c0
--- /dev/null
+++ b/layouts/partials/meta-tags.html
@@ -0,0 +1,18 @@
+<meta name="viewport" content="width=device-width, initial-scale=1">
+<!-- Primary Meta Tags -->
+<meta name="title" content="O3DE{{ if .Params.Title }}: {{ .Params.Title }} {{ end }}">
+<meta name="description" content="{{ if .Params.Summary }}{{ .Params.Summary }} {{ else }}{{ .Site.Params.description }} {{ end }} ">
+
+<!-- Open Graph / Facebook -->
+<meta property="og:type" content="website">
+<meta property="og:url" content="{{ .Permalink }}">
+<meta property="og:title" content="O3DE{{ if .Params.Title }}: {{ .Params.Title }} {{ end }}">
+<meta property="og:description" content="{{ if .Params.Summary }}{{ .Params.Summary }} {{ else }}{{ .Site.Params.description }} {{ end }}">
+<meta property="og:image" content="img/logos/O3DE-Circle-Icon.svg">
+
+<!-- Twitter -->
+<meta property="twitter:card" content="summary_large_image">
+<meta property="twitter:url" content="{{ .Permalink }}">
+<meta property="twitter:title" content="O3DE{{ if .Params.Title }}: {{ .Params.Title }} {{ end }}">
+<meta property="twitter:description" content="{{ if .Params.Summary }}{{ .Params.Summary }} {{ else }}{{ .Site.Params.description }} {{ end }}">
+<meta property="twitter:image"content="img/logos/O3DE-Circle-Icon.svg">
\ No newline at end of file
